{
  "name": "react-isomorphic-boilerplate",
  "version": "0.4.4",
  "main": "src/server/index.js",
  "license": "MIT",
  "scripts": {
    "start": "DEBUG=*,-nodemon*,-express*,-send,-babel*,-eslint*,-css-modules* NODE_ENV=hot babel-node --inspect src/server/index.js",
    "clean": "find dist/assets/ -regex '.*[css|js]$' -delete",
    "build:browser:dev": "npm run clean && webpack --env=dev --config=webpack.browser.js --progress --profile --colors --json > compilation-stats.json",
    "build:server:dev": "webpack --env=dev --config=webpack.server.js --progress --profile --colors",
    "build:browser:prod": "webpack --env=prod --config=webpack.browser.js --progress --profile --colors --json > compilation-stats.json",
    "build:server:prod": "webpack --env=prod --config=webpack.server.js --progress --profile --colors",
    "eslint": "eslint ./",
    "test": "npm run eslint && cross-env NODE_ENV=test nyc ava --verbose",
    "coverage": "nyc report --reporter=lcov",
    "report": "cross-env NODE_ENV=test nyc ava && yarn run coverage"
  },
  "devDependencies": {
    "asset-require-hook": "^1.2.0",
    "autoprefixer": "^7.1.6",
    "ava": "^0.24.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.1",
    "babel-loader": "^7.1.2",
    "babel-plugin-istanbul": "^4.1.5",
    "babel-preset-env": "^1.6.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "codecov": "^3.0.0",
    "cross-env": "^5.1.1",
    "css-loader": "^0.28.7",
    "css-modules-require-hook": "^4.2.2",
    "enzyme": "^3.2.0",
    "enzyme-adapter-react-16": "^1.1.0",
    "eslint": "^4.9.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-react": "^7.4.0",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.5",
    "ignore-styles": "^5.0.1",
    "mock-require": "^2.0.2",
    "node-sass": "^4.6.1",
    "nyc": "^11.3.0",
    "postcss-loader": "^2.0.8",
    "remove-debug-loader": "^0.2.2",
    "reset.css": "^2.0.2",
    "sass-loader": "^6.0.6",
    "sinon": "^4.1.2",
    "style-loader": "^0.19.0",
    "supertest": "^3.0.0",
    "uglifyjs-webpack-plugin": "^1.0.1",
    "url-loader": "^0.6.2",
    "webpack": "^3.8.1",
    "webpack-dev-middleware": "^2.0.2",
    "webpack-hot-middleware": "^2.21.0",
    "webpack-hot-server-middleware": "^0.3.0",
    "webpack-node-externals": "^1.6.0",
    "webpack-visualizer-plugin": "^0.1.11"
  },
  "dependencies": {
    "body-parser": "^1.18.2",
    "classnames": "^2.2.5",
    "debug": "^3.1.0",
    "express": "^4.16.2",
    "immutability-helper": "^2.6.2",
    "lodash": "^4.17.4",
    "moment": "^2.19.2",
    "normalizr": "^3.2.4",
    "prop-types": "^15.6.0",
    "react": "^16.1.1",
    "react-dom": "^16.1.1",
    "react-helmet": "^5.2.0",
    "react-hot-loader": "^3.1.3",
    "react-redux": "^5.0.6",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "redux": "^3.7.2",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.2.0",
    "superagent": "^3.8.2"
  },
  "description": "This boilerplate would help you build a react/redux/react-router isomorphic/universal web app",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ddhp/react-isomorphic-boilerplate.git"
  },
  "keywords": [
    "react",
    "redux",
    "isomorphic",
    "universal",
    "hmr",
    "hot-reload",
    "react-router"
  ],
  "author": "ddhp",
  "bugs": {
    "url": "https://github.com/ddhp/react-isomorphic-boilerplate/issues"
  },
  "homepage": "https://github.com/ddhp/react-isomorphic-boilerplate#readme",
  "ava": {
    "files": [
      "src/**/__tests__/**/*.js",
      "src/**/*.spec.js",
      "!test/fixtures/**/*",
      "!test/helpers/**/*"
    ],
    "require": [
      "babel-register",
      "ignore-styles",
      "./src/enzymeSetup.js"
    ],
    "babel": "inherit"
  },
  "nyc": {
    "require": [
      "babel-register"
    ],
    "sourceMap": false,
    "instrument": false
  }
}
